{
  "manifest_version": 3,
  "name": "Hermes",
  "version": "2.0.0",
  "description": "A browser extension for API access and token management in ADP Workforce Manager.",

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },

  "side_panel": {
    "default_path": "hermes.html"
  },

  "background": {
    "service_worker": "scripts/bg.js",
    "type": "module"
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "tabs",
    "windows",
    "sidePanel"
  ],

  "host_permissions": [
    "*://*.mykronos.com/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },

  "web_accessible_resources": [{
    "resources": [
      "scripts/*.js",
      "themes/*.json",
      "apilibrary/*.json",
      "icons/*.png"
    ],
    "matches": ["*://*.mykronos.com/*", "https://*/*"]
  }],

  "browser_specific_settings": {
    "edge": {
      "browser_action_next_to_address_bar": true
    }
  }
}